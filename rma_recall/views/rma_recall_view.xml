<odoo>

    <record id="rma_recall_form" model="ir.ui.view">
        <field name="name">rma.recall.form</field>
        <field name="model">rma.recall</field>
        <field name="arch" type="xml">
            <form string="Recalls">
                <header>
                    <button
                        name="action_search"
                        states="new"
                        class="oe_highlight"
                        type="object"
                        string="Search"
                    />
                    <button
                        name="action_done"
                        states="in_progress"
                        class="oe_highlight"
                        type="object"
                        string="Done"
                    />
                    <button
                        name="action_cancel"
                        states="new,in_progress"
                        class="oe_highlight"
                        type="object"
                        string="Cancel"
                    />
                    <field name="state" widget="statusbar" />
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1" />
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field
                                name="lot_id"
                                attrs="{'readonly': [('state', '!=', 'new')]}"
                            />
                            <field name="product_id" />
                         </group>
                         <group>
                            <field
                                name="rma_date"
                                attrs="{'readonly': [('state', '!=', 'new')]}"
                            />
                            <field
                                name="origin"
                                attrs="{'readonly': [('state', '!=', 'new')]}"
                            />
                        </group>
                    </group>
                    <group>
                        <field name="line_ids" nolabel="1">
                            <tree>
                                <field name="location_id" />
                                <field name="partner_id" />
                                <field name="product_id" />
                                <field name="qty" />
                                <field name="uom_id" groups="uom.group_uom" />
                                <field name="rma_id" />
                                <field name="scrap_id" />
                                <field name="state" />
                                <button
                                    name="button_rma_order"
                                    type="object"
                                    string="RMA order"
                                    attrs="{'invisible': ['|', ('partner_id', '=', False), ('rma_id', '!=', False)]}"
                                />
                                <button
                                    name="button_scrap_order"
                                    type="object"
                                    string="Scrap Order"
                                    class="btn-success"
                                    attrs="{'invisible': ['|', ('partner_id', '!=', False), ('scrap_id','!=', False)]}"
                                />
                            </tree>
                            <form string="Recall Line">
                              <header>
                                <button
                                        name="button_rma_order"
                                        type="object"
                                        string="RMA Order"
                                        class="btn-success"
                                        attrs="{'invisible': ['|', ('partner_id', '=', False), ('rma_id', '!=', False)]}"
                                    />
                                <button
                                        name="button_scrap_order"
                                        type="object"
                                        string="Scrap Order"
                                        class="btn-success"
                                        attrs="{'invisible': ['|', ('partner_id', '!=', False), ('scrap_id','!=', False)]}"
                                    />
                                <field name="state" widget="statusbar" />
                              </header>
                              <group>
                                <group>
                                  <field name="product_id" />
                                  <field name="qty" />
                                  <field name="uom_id" groups="uom.group_uom" />
                                  <field name="location_id" />
                                  <field name="partner_id" />
                                </group>
                                <group>
                                  <field name="rma_id" />
                                  <field name="scrap_id" />
                                </group>
                              </group>
                            </form>
                        </field>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field
                        name="message_follower_ids"
                        widget="mail_followers"
                        groups="base.group_user"
                    />
                    <field name="message_ids" widget="mail_thread" />
                </div>
            </form>
        </field>
    </record>

    <record id="rma_recall_tree" model="ir.ui.view">
        <field name="name">rma.recall.tree</field>
        <field name="model">rma.recall</field>
        <field name="arch" type="xml">
            <tree string="Recalls">
                <field name="name" />
                <field name="lot_id" />
                <field name="product_id" />
                <field name="rma_date" />
                <field name="origin" />
                <field name="state" />
            </tree>
        </field>
    </record>

    <record id="rma_recall_search" model="ir.ui.view">
        <field name="name">rma.recall.search</field>
        <field name="model">rma.recall</field>
        <field name="arch" type="xml">
            <search string="Search Recalls">
                <field
                    name="name"
                    filter_domain="[('name', 'ilike', self)]"
                    string="Name"
                />
                <field name="lot_id" />
                <field name="product_id" />
                <field name="origin" />
                <group name="groupby">
                    <filter
                        name="state"
                        string="Status"
                        context="{'group_by': 'state'}"
                    />
                </group>
            </search>
        </field>
    </record>

    <record id="rma_recall_action" model="ir.actions.act_window">
        <field name="name">Recalls</field>
        <field name="res_model">rma.recall</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Menu items -->
    <menuitem
        id="rma_recall_menu"
        name="Recalls"
        parent="rma.menu_rma_root"
        sequence="20"
        action="rma_recall_action"
    />

</odoo>
